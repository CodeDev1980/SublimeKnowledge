<style>
    .blog-layout-full {
        font-family: 'Montserrat', sans-serif;
        background: rgb(255,255,255);
        background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(255,206,247,1) 10%, rgb(164, 209, 235) 100%);
        color: white;
        padding-bottom: 10px;
    }
</style>
<body class="blog-layout-full">
<%- include('layouts/navbar') -%>

<div class="container-fluid" style="margin-top: 170px; margin-bottom: 80px;">
 

    <div class="container p-5 text-center mb-5">

      <!-- Default form register -->
      <p class="h4 mb-4">Sign up</p>
  
      <form action="/users/register" method="post" enctype="multipart/form-data" class="mt-3 mb-5">

        <div class="row mb-4">
            <!-- Name input -->
            <div class="col-md m-2">
                <label class="form-label" for="username">UserName</label>
                <input type="text" required id="username" name="username" class="form-control" />

            </div>

            <!-- Name input -->
            <div class="col-md m-2">
                <label class="form-label" for="email">Email</label>
                <input type="email" required id="email" name="email" class="form-control" />

            </div>
        </div>

        <div class="row mb-4">
            <!-- Password input -->
            <div class="col-md m-2">
                <label>Password</label>
                <input type="password" id="password" name="password" class="form-control" />
            </div>
           
        </div>

        <!-- Message input -->
        <div class="form-outline mb-4">
            <textarea class="form-control" required spellcheck="true" maxlength="655" id="about" name="about" rows="4"></textarea>
            <label class="form-label" for="about">About You</label>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
    </form>
      <!-- Default form register -->
  </div>

    <%- include('layouts/scripts') -%>
    </body>
</html>
